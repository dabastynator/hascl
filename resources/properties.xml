<resources>

    <properties>
        <property id="version" type="string">1.0</property>
        <property id="endpoint" type="string">http://localhost:8123</property>
        <property id="token" type="string">long.lived.token</property>
        
        <property id="legacy_endpoint" type="string"></property>
        <property id="legacy_token" type="string"></property>
        <property id="legacy_musicunit" type="string">media.public</property>

        <property id="kodi_endpoint" type="string">http://asterix:8080</property>
        <property id="kodi_user" type="string">kodi</property>
        <property id="kodi_pwd" type="string">kodi</property>
    </properties>

    <settings>
        <setting propertyKey="@Properties.version" title="@Strings.version">
            <settingConfig type="alphaNumeric" readonly="true" />
        </setting>

        <!-- Hass Settings -->
        <setting propertyKey="@Properties.endpoint" title="@Strings.endpoint">
            <settingConfig type="url"/>
        </setting>
        <setting propertyKey="@Properties.token" title="@Strings.token">
            <settingConfig type="alphaNumeric"/>
        </setting>

        <!-- Kodi Settings -->
        <setting propertyKey="@Properties.kodi_endpoint" title="@Strings.kodi_endpoint">
            <settingConfig type="url"/>
        </setting>
        <setting propertyKey="@Properties.kodi_user" title="@Strings.kodi_user">
            <settingConfig type="alphaNumeric"/>
        </setting>
        <setting propertyKey="@Properties.kodi_pwd" title="@Strings.kodi_pwd">
            <settingConfig type="alphaNumeric"/>
        </setting>
        
        <!-- Legacy Smart Home Settings -->
        <setting propertyKey="@Properties.legacy_endpoint" title="@Strings.legacy_endpoint">
            <settingConfig type="url"/>
        </setting>
        <setting propertyKey="@Properties.legacy_token" title="@Strings.legacy_token">
            <settingConfig type="alphaNumeric"/>
        </setting>
        <setting propertyKey="@Properties.legacy_musicunit" title="@Strings.legacy_musicunit">
            <settingConfig type="alphaNumeric"/>
        </setting>
    </settings>
</resources>
